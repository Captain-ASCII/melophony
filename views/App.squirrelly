<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Deeezer</title>
        <link rel="stylesheet" type="text/css" href="/source/App.css" />
        <link rel="stylesheet" type="text/css" href="/source/multi-range.css" />
        <script src="https://unpkg.com/squirrelly@latest/dist/squirrelly.min.js"></script>
        <script src="/source/multi-range.js"></script>
        <script src="/source/App.js"></script>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    </head>
    <body onload="start()">
        <div class="App">
            <div id="header">
                <div class="logo" >
                    <img />
                </div>
                <div class="centeredTitle">
                    <h1>Titres</h1>
                </div>
                <div class="searchbar">
                    <input type="text" oninput="filter(this.value)" />
                </div>
                <i onclick="synchronize()" class="fa fa-download icon"></i>
            </div>
            <div class="main-container">
                <div class="sidebar left" >
                    <div onclick="changeScreen('tracks')" >Titles</div>
                    <div onclick="changeScreen('artists')" >Artists</div>
                    <div id="toaster">
                        <div id="toasterText">?!</div>
                    </div>
                </div>
                <div id="content">
                    <h4 class="subTitle" ></h4>
                    <div id="tracks">
                        {{foreach(options.artists)}}
                            <div class="artist">
                                <h2>{{@this.name}}</h2>
                                <div>
                                    {{foreach(@this.tracks)}}
                                        <!-- <div class="trackContainer">
                                            <div onclick="changeTrack('{{@this.id}}.m4a')" style="background-image: url('/images/{{@this.id}}.jpg')" class="track">
                                                <div class="trackInfo">
                                                    <p>{{@this.title}}</p>
                                                    <p>{{@this.artist}}</p>
                                                </div>
                                            </div>
                                        </div> -->
                                        <div class="trackListItem">
                                            <div onclick="startPlay('{{@this.id}}')">
                                                <p class="title" >{{@this.title}}</p>
                                                <p class="duration" >{{@this.duration|duration}}</p>
                                            </div>
                                            <i onclick="modifyTrack('{{@this.id}}')" class="fa fa-pen icon"></i>
                                        </div>
                                    {{/foreach}}
                                </div>
                            </div>
                        {{/foreach}}
                    </div>
                </div>
                <div class="sidebar right" >
                    <div class="border"></div>
                    <div class="content-right">

                    </div>
                </div>
            </div>
            <div id="footer">
                <audio id="player">
                    <p>If you are reading this, it is because your browser does not support the audio element.</p>
                </audio>
                <div id="controls">
                    <button onclick="previous()"><i class="flatButton fa fa-backward fa-2x" ></i></button>
                    <button onclick="playPause()"><i id="playButton" class="flatButton fa fa-play fa-2x" tabIndex="-1" ></i></button>
                    <button onclick="next()"><i class="flatButton fa fa-forward fa-2x" ></i></button>
                </div>
                <div id="currentTrackInfo" onclick="modifyTrack()" ></div>
                <div id="tracker"></div>
            </div>
        </div>
    </body>
</html>