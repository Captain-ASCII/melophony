{
  "compilerOptions": {
    "lib": ["es6"],
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@models/*": ["src/models/*"],
      "@tests/*": ["src/tests/*"],
      "@utils/*": ["src/utils/*"],
      "@projectConfiguration": ["ProjectConfiguration.ts"]
    },
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ]
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "include": [
    "./src"
  ],
  "exclude" : [
    "./build",
    "./node_modules"
  ]
}