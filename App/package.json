{
  "name": "app",
  "version": "2.0.0",
  "description": "The frontEnd application with React",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --config webpack/webpack.dev.js",
    "build": "webpack -p --config webpack/webpack.prod.js",
    "production": "nodejs server.js"
  },
  "author": "Daniel Ben-Lulu",
  "license": "ISC",
  "devDependencies": {
    "@types/jwt-client": "^0.2.2",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/ws": "^7.2.3",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.25.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-strict-react": "^9.0.2",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^2.0.2",
    "react-hot-loader": "^4.12.14",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.0",
    "ts-loader": "^6.2.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "core-js": "^3.2.1",
    "express": "^4.17.1",
    "jwt-client": "^0.2.1",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.4",
    "regenerator-runtime": "^0.13.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "react-hooks/exhaustive-deps": "error",
      "@typescript-eslint/no-explicit-any": [
        "off"
      ]
    },
    "globals": {
      "__dirname": "readonly",
      "clearInterval": "readonly",
      "clearTimeout": "readonly",
      "console": "readonly",
      "document": "readonly",
      "fetch": "readonly",
      "global": "writable",
      "module": "writable",
      "require": "readonly",
      "setInterval": "readonly",
      "setTimeout": "readonly",
      "window": "writable",
      "Headers": "writable"
    }
  }
}
