{
  "compilerOptions": {
    "lib": ["dom"],
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@actions/*": ["redux/actions/*"],
      "@components/*": ["components/*"],
      "@models/*": ["models/*"],
      "@index": ["index.tsx"],
      "@reducers/*": ["redux/reducers/*"],
      "@selectors/*": ["redux/selectors/*"],
      "@store": ["redux/store/Store.ts"],
      "@data/*": ["data/*"],
      "@utils/*": ["utils/*"],
      "@providers/*": ["providers/*"],
      "@screens/*": ["screens/*"]
    }
  },
  "plugins": [
    "@typescript-eslint",
  ],
  "include": [
    "src"
  ],
  "exclude" : [
    "./build",
    "./dist",
    "./public",
    "./node_modules"
  ],
}